{
  "compilerOptions": {
    "target": "es2016", 
    "module": "commonjs", 
    "baseUrl": ".",                                  
    "paths": {
      "@user/*": ["./src/modules/user/*"],
      "@shared/*": ["./src/shared/*"],
    },                                      
    "resolveJsonModule": true ,
    "outDir": "./dist",                                   
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true ,
    "noUnusedLocals": true,                           
    "skipLibCheck": true 
  }
}
